{{#if hasBlock}}
  {{#if _truncate}}
    {{yield (hash
      target=(component "ember-truncate/truncation-target")
      button=(component "ember-truncate/button-toggle" onClick=(action "toggleTruncate"))
      isTruncated=truncationState
    )}}
  {{else}}
    {{yield (hash
      target=(component "ember-truncate/truncation-noop")
      button=(component "ember-truncate/button-toggle" onClick=(action "toggleTruncate"))
      isTruncated=truncationState
    )}}
  {{/if}}
{{else}}
  {{#if _truncate}}
    {{#ember-truncate/truncation-target}}
    {{text}}
    {{/ember-truncate/truncation-target}}
    {{#ember-truncate/button-toggle onClick=(action "toggleTruncate")}}
    see more
    {{/ember-truncate/button-toggle}}
  {{else}}
    {{text}}
    {{#ember-truncate/button-toggle onClick=(action "toggleTruncate")}}
      see less
    {{/ember-truncate/button-toggle}}
  {{/if}}
{{/if}}
